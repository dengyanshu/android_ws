<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightskyblue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity_smtstorage" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="504dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/logo3" />

            <TextView
                android:id="@+id/Text_MONumber2"
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:text="工单名称"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green" />

            <EditText
                android:id="@+id/Edit_MONumber2"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:autoText="false"
                android:contentDescription="@color/green"
                android:ems="10"
                android:hint="输入SN 获取当前生产工单"
                android:singleLine="true" />

            <TextView
                android:id="@+id/Text_SMTLadeCarLabel2"
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:text="车量信息"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green" />

            <EditText
                android:id="@+id/Edit_SMTLadeCarLabel2"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:autoText="false"
                android:contentDescription="@color/green"
                android:ems="10"
                android:hint="请输入车量编号"
                android:singleLine="true" />

            <Button
                android:id="@+id/button_SMTStorage"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="80dp"
                android:text="入库"
                android:textColor="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/Edit_StorageMesInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="top"
                android:inputType="text|textMultiLine" >

                <requestFocus />
            </EditText>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>