<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightskyblue"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".activity.CheckMoNamesActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/login_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_vertical|center_horizontal"
            android:text="板边条码装车"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textSize="40sp"
            android:textStyle="normal|bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="465dp"
            android:layout_height="627dp"
            android:orientation="vertical"
          >
           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                
                 >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:text="工单:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/sntocar_moname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    android:hint="输入板边条码获取工单信息">
              </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:text="产品描述:"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/sntocar_moproduct"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.60"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    android:focusable="false"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="料号:"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/sntocar_momaterial"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    android:focusable="false"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/sntocar_cartextview"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="车辆:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/sntocar_carsn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="输入车辆SN"
                    android:singleLine="true" />
                 
             </LinearLayout>
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="已装车数量"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/sntocar_snnum"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true" 
                    android:enabled="false"/>
                 
             </LinearLayout>
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
               >

                <TextView
                    android:id="@+id/sntocar_mainsntextview"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="板边条码:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/sntocar_mainsn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:hint="扫描板边条码"
                    android:singleLine="true"
                    
                     />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:text="联板数量:"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/sntocar_makecountnum"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:enabled="false"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:textStyle="bold" >
                    
                </EditText>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="手动选择\n联板数量"
                    android:textColor="@color/black" 
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"/>

                <Spinner
                    android:id="@+id/sntocar_makecountnumspinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="手动选择联板数量"
                    android:textColor="@color/red" />

            </LinearLayout>  

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                
                   <TextView
                       android:layout_width="298dp"
                       android:layout_height="40dp"
                       android:gravity="bottom|left"
                       android:text="子板条码"
                       android:textColor="@color/black" />
                   
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="bottom|right"
                        android:text="已扫子板条码数量"
                        android:textColor="@color/black" />

                </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:orientation="horizontal" >

                      <EditText
                          android:id="@+id/sntocar_sn"
                          android:layout_width="298dp"
                          android:layout_height="50dp"
                          android:layout_marginTop="5dp"
                          android:layout_weight="0.64"
                          android:hint="输入条码,submit提交"
                          android:singleLine="true" />

                      <EditText
                          android:id="@+id/sntocar_zibansum"
                          android:layout_width="122dp"
                          android:layout_height="50dp"
                          android:layout_marginTop="5dp"
                          android:enabled="false"
                          android:gravity="center_vertical|fill_horizontal"
                          android:singleLine="true"
                          android:textColor="@color/red"
                          android:textSize="20sp"
                          android:textStyle="bold" />

                  </LinearLayout>
           
            </LinearLayout>

           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" >"

                

            </LinearLayout>  
             
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" 
                android:orientation="horizontal">
                
            </LinearLayout>
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" >

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" 
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/sntocar_okbutton"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="0.06"
                    android:text="强制装车" />

                <Button
                    android:id="@+id/sntocar_clearbutton"
                    android:layout_width="0dp"
                    android:layout_height="71dp"
                    android:layout_weight="0.06"
                    android:text="清空所有" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_marginLeft="20dp">

            <EditText
                android:id="@+id/sntocar_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1.80"
                android:ems="10"
                android:enabled="false"
                android:gravity="top"
                android:textSize="15sp" >

             
            </EditText>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>