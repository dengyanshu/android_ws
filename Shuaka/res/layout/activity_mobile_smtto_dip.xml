<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightskyblue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MobileSMTToDIP" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="504dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/logo3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.01"
                    android:gravity="left"
                    android:text="总长度"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:gravity="left"
                    android:text="班次"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:gravity="left"
                    android:text="前缀关健字"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

               <Spinner
                      android:id="@+id/spin_mobileDipSNlength"
                      android:layout_width="120dp"
                      android:layout_height="49dp"
                      android:layout_marginLeft="20dp" />

               <Spinner
                   android:id="@+id/spin_mobileDipshift"
                   android:layout_width="120dp"
                   android:layout_height="49dp" />

                <EditText
                    android:id="@+id/Edit_mobileDipKeyword"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:autoText="false"
                    android:contentDescription="@color/green"
                    android:ems="10"
                        android:layout_weight="0.06"
                    android:hint="为空不卡关健字"
                    android:singleLine="true" />

            </LinearLayout>

            <SurfaceView
                android:id="@+id/surfaceView1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.35"
                    android:gravity="left"
                    android:text="工单"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.37"
                    android:gravity="left"
                    android:text="产品描述"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Spinner
                    android:id="@+id/spin_mobileDipMO"
                    android:layout_width="220dp"
                    android:layout_height="49dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.30" />

                <EditText
                    android:id="@+id/Edit_mobileDipProductdescript"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_weight="0.30"
                    android:autoText="false"
                    android:contentDescription="@color/green"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.62"
                    android:gravity="left"
                    android:text="产品料号"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    android:gravity="left"
                    android:text="扫描数量"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/Edit_mobileDipProductNumber"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:autoText="false"
                    android:contentDescription="@color/green"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/Edit_Scannedquality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
             
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:autoText="false"
                    android:contentDescription="@color/green"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:singleLine="true" />

            </LinearLayout>

            <TextView
                android:id="@+id/TextView3"
                android:layout_width="403dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="工作流名称"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green" />

            <EditText
                android:id="@+id/Edit_mobileDipWorkflowname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:autoText="false"
                android:contentDescription="@color/green"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.78"
                    android:gravity="left"
                    android:text="订单号"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.00"
                    android:gravity="left"
                    android:text="客户订单"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/Edit_mobileDipOrderNumber"
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:autoText="false"
                    android:contentDescription="@color/green"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/Edit_mobileDipCustomerorder"
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:autoText="false"
                    android:contentDescription="@color/green"
                    android:editable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:gravity="left"
                    android:text="启动批号"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />

                <EditText
                    android:id="@+id/Edit_mobileDipStartSN"
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="25dp"
                    android:autoText="false"
                    android:contentDescription="@color/green"
                    android:ems="10"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/linearLayout1"
        layout="@layout/common_edt_sysinfo" />

</RelativeLayout>