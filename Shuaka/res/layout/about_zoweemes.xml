<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		  android:layout_width="wrap_content"  android:layout_height="wrap_content"
    		  android:orientation="vertical"  android:paddingTop="10dp"
    		  android:paddingBottom="14dp"  android:paddingLeft="40dp"
    		  android:paddingRight="50dp"  android:background="@color/thin_back">
    <TextView  android:layout_width="wrap_content"  android:layout_height="wrap_content"
               android:text="@string/about"  android:textSize="18dp"/>
    <LinearLayout   android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="horizontal"  android:layout_marginTop="5dp">
        <TextView  android:layout_width="wrap_content"  android:layout_height="wrap_content"
                   android:text="@string/app_name"  android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout   android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="horizontal"  android:layout_marginTop="3dp">
        <TextView  android:layout_width="wrap_content"  android:layout_height="wrap_content"
                   android:text="@string/copyright"  android:textSize="16dp"
                   />
    </LinearLayout>
	<LinearLayout   android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="horizontal"  
                    android:layout_marginTop="3dp">
        <TextView  android:layout_width="wrap_content"  android:layout_height="wrap_content"
            	   android:text="@string/currentEdition"
                   android:textSize="16dp"  android:id="@+id/labSoftEdition"/>
    </LinearLayout>
    
</LinearLayout>