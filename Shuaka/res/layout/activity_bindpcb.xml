<?xml version="1.0" encoding="utf-8"?>
<!-- 单纯板边条码绑定 ver1.0版 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightskyblue"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".activity.CheckMoNamesActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/login_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_vertical|center_horizontal"
            android:text="联板条码绑定"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textSize="40sp"
            android:textStyle="normal|bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="465dp"
            android:layout_height="627dp"
            android:orientation="vertical"
            android:padding="0dp" >
           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                
                android:background="@color/antiquewhite" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:text="工单:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/bindpcb_moname"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" >
              </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:text="产品描述:"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/bindpcb_moproduct"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.60"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="料号:"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/bindpcb_momaterial"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/blanchedalmond" >

                <TextView
                   
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="母板条码:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/bindpcb_mubansn"
                    android:layout_width="292dp"
                    android:layout_height="78dp"
                    android:layout_marginTop="5dp"
                    android:hint="输入板边条码"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/bindpcb_mubanbutton"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="重新获取\n母板SN " />

            </LinearLayout>

           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:text="联板数量:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/bindpcb_mubannum"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="15dp"
                    android:enabled="false"
                    android:gravity="bottom"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:textStyle="bold" >
                    
                </EditText>"

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="手动选择\n联板数量"
                    android:textColor="@color/black" 
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"/>

                <Spinner
                    android:id="@+id/bindpcb_mubanspinner"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="手动选择联板数量"
                    android:textColor="@color/red" />

            </LinearLayout>  
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="子板条码:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/bindpcb_zibansn"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:hint="输入子板条码"
                    android:singleLine="true" />
                 
             </LinearLayout>
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" 
                android:orientation="horizontal">
                
            </LinearLayout>
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" >

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" 
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/bindpcb_okbutton"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="0.06"
                    android:text="确定" />

                <Button
                    android:id="@+id/bindpcb_clearbutton"
                    android:layout_width="0dp"
                    android:layout_height="91dp"
                    android:layout_weight="0.06"
                    android:text="清空所有" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_marginLeft="20dp">

            <EditText
                android:id="@+id/tino_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1.80"
                android:ems="10"
                android:enabled="false"
                android:gravity="top"
                android:textSize="15sp" >

                <requestFocus />
            </EditText>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>