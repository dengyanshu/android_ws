<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightskyblue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartDip" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="504dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

          <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/logo3" 
                android:layout_marginBottom="15dp"/>

          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/corners_bg_thingray"
              android:orientation="vertical"
              android:layout_margin="5dp"
              >

              <TextView
                  android:id="@+id/tjdipstart_motv"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="5dp"
                  android:gravity="left"
                  android:text="工单"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:textColor="@color/green" />

               <EditText
                   android:id="@+id/tjdipstart_moedit"
                   android:layout_width="match_parent"
                   android:layout_height="49dp"
                   android:layout_marginLeft="15dp"
                   android:autoText="false"
                   android:contentDescription="@color/green"
                   android:ems="10"
                   android:hint="输入工单获取工单信息"
                   android:singleLine="true" />

               <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="产品料号"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green" />

            <EditText
                android:id="@+id/tjdipstart_moproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:autoText="false"
                android:contentDescription="@color/green"
                android:editable="false"
                android:enabled="false"
                android:ems="10"
                android:focusable="false"
                android:singleLine="true" />

            <TextView
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="产品描述"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green" />

            <EditText
                android:id="@+id/tjdipstart_modescri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:autoText="false"
                android:contentDescription="@color/green"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:enabled="false"
                android:singleLine="true" />
            <TextView
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="工作流名称"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green" />

            <EditText
                android:id="@+id/tjdipstart_workflownameedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:autoText="false"
                android:contentDescription="@color/green"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:enabled="false"
                android:singleLine="true" />
              
              
          </LinearLayout>

                
          

            

               
           

           

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" 
                android:background="@drawable/corners_bg">

                <TextView
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    android:text="启动批号"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" />

                <EditText
                    android:id="@+id/tjdipstart_snedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:autoText="false"
                    android:contentDescription="@color/green"
                    android:ems="10"
                    android:singleLine="true" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/tjdipstart_editscan"
         android:textSize="15dp"
         android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/linearLayout1"
        />

</RelativeLayout>