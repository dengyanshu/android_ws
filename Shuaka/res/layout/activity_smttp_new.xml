<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".activity.CheckMoNamesActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@drawable/corners_bg_title">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="70dp"
            
           
            android:src="@drawable/logo3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_vertical|center_horizontal"
            android:text="SMT--贴片（六轴机）"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textSize="60sp"
            android:textStyle="normal|bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@color/lightblue">

        <LinearLayout
            android:layout_width="595dp"
            android:layout_height="537dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="0dp" >
            
            
            
           

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/corners_bg"
                android:padding="5dp"
                >
               

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="上扫描头条码信息："
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/red" 
                        android:gravity="center"
                        />
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       
                        >

                        <Button
                            android:id="@+id/smttp_new_snbtn1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="Button" 
                            android:layout_margin="3dp"
                            />

                        <Button
                            android:id="@+id/smttp_new_snbtn2"
                             android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:text="Button" />

                        <Button
                            android:id="@+id/smttp_new_snbtn3"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:text="Button" />
                        
                    </LinearLayout>
                    
                  <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <Button
                            android:id="@+id/smttp_new_snbtn4"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:text="Button" />

                        <Button
                            android:id="@+id/smttp_new_snbtn5"
                             android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:text="Button" />

                        <Button
                            android:id="@+id/smttp_new_snbtn6"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:text="Button" />
                        
                    </LinearLayout>
                    
                    
                

                
                    
                   


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/corners_bg"
                android:padding="5dp"
                >
               

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="下扫描头条码信息："
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/red" 
                        android:gravity="center"
                        />
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <Button
                            android:id="@+id/smttp_new_snbtndown1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:text="Button" />

                        <Button
                            android:id="@+id/smttp_new_snbtndown2"
                             android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:text="Button" />

                        <Button
                            android:id="@+id/smttp_new_snbtndown3"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:text="Button" />
                        
                    </LinearLayout>
                    
                  <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <Button
                            android:id="@+id/smttp_new_snbtndown4"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:text="Button" />

                        <Button
                            android:id="@+id/smttp_new_snbtndown5"
                             android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:text="Button" />

                        <Button
                            android:id="@+id/smttp_new_snbtndown6"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:text="Button" />
                        
                    </LinearLayout>
            </LinearLayout>
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_bg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                >

                  <TextView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="连板数量："
                    android:textColor="@color/red" 
                    />
                               
                                   <Spinner
                        android:id="@+id/spinner_onePCBQTY1"
                        android:layout_width="100dp"
                        android:layout_height="50dp" />
                                   
                                                                  
                                   <Spinner
                        android:id="@+id/spinner_A_PCBSide_bb"
                        android:layout_width="100dp"
                        android:layout_height="50dp" />
                                   
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="手动扫描："
                    android:textColor="@color/red" 
                    />

                <EditText
                    android:id="@+id/smttp_new_sn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                   
                    />
                </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/corners_bg"
               >
                  <TextView
                    android:layout_width="480dp"
                    android:layout_height="50dp"
                    android:text="如是板边条码，请设置条码张贴上下："
                    android:textColor="@color/red" 
                    android:textSize="20sp"
                    android:gravity="center"
                    />
                <Spinner
                     android:id="@+id/smttp_new_banbian_upordown"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textColor="@color/green"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                
            </LinearLayout>
              <LinearLayout
                  android:id="@+id/smttp_new_banbian_clearfous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                 
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:background="@drawable/corners_bg"
                >

                <Button
                     android:id="@+id/smttp_new_btn"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="手动模式,不与ZOWEE控制卡通讯!!!" 
                    android:textColor="@color/green"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    >
                </Button>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corners_bg"
            >

            <EditText
                android:id="@+id/smttp_new_editscan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1.31"
                android:ems="10"
                android:gravity="top"
                android:enabled="false"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>