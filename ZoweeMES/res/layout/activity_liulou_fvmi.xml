<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightskyblue"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".activity.CheckMoNamesActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="70dp"
            
           
            android:src="@drawable/login_logo" />

        <TextView
            android:id="@+id/liuloufvmi_titletextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_vertical|center_horizontal"
            android:text="开机测试"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textSize="60sp"
            android:textStyle="normal|bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="-3dp" 
        >

        <LinearLayout
            android:layout_width="495dp"
            android:layout_height="507dp"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="-3dp"
             >
           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                >

                <TextView
                    android:id="@+id/liuloufvmi_motextview"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:text="工单:"
                     android:textColor="@color/red"/>

                <EditText
                    android:id="@+id/liuloufvmi_moedit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" >
             </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="产品描述:"
                    android:textColor="@color/red" 
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"/>

                <EditText
                    android:id="@+id/liuloufvmi_modescri"
                    android:layout_width="181dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:enabled="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                   <TextView
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:text="料号:"
                       android:textColor="@color/red" />

                <EditText
                    android:id="@+id/liuloufvmi_moproduct"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:focusable="false"
                    android:textStyle="bold" />
                
            </LinearLayout>
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
               >

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="SN"
                    android:textColor="@color/red" 
                    android:layout_marginRight="5dp"/>

                <EditText
                    android:id="@+id/liuloufvmi_snedit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                

                </LinearLayout>
                 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
               >

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="不良代码"
                    android:textColor="@color/red" 
                    android:layout_marginRight="5dp"/>

                <EditText
                    android:id="@+id/liuloufvmi_errorcodeedit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                

                </LinearLayout>
               
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/liuloufvmi_button"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                     android:textColor="@color/green"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:text="开机测试"
                    >
                </Button>
            </LinearLayout>
            <TextView 
                  android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/liuloufvmi_resultview"
                android:gravity="center"
                android:text="结果"
                android:textSize="180sp"
                android:textColor="@color/green"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-3dp">

            <EditText
                android:id="@+id/liuloufvmi_editscan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1.31"
                android:ems="10"
                android:enabled="false"
                android:gravity="top"
                android:textSize="15sp" 
                android:layout_marginBottom="-3dp">

                
            </EditText>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>