<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightskyblue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity_smtlade" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="504dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/logo3" />

            <TextView
                android:id="@+id/Text_LadeMOName"
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:text="工单名称"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green" />

            <EditText
                android:id="@+id/Edit_SMTLadeMOName"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:autoText="false"
                android:contentDescription="@color/green"
                android:ems="10"
                android:hint="请输入SN 获取当前生产工单"
                android:singleLine="true" />
             <TextView
                android:id="@+id/Text_Ladeabside"
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="请选择需要贴片过站面"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green" />

            <Spinner
                android:id="@+id/SP_SMTLadeabside"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:autoText="false"
             />

            <TextView
                android:id="@+id/Text_SMTLadeCarLabel"
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="车量信息"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green" />

            <EditText
                android:id="@+id/Edit_SMTLadeCarLabel"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:autoText="false"
                android:contentDescription="@color/green"
                android:ems="10"
                android:hint="请输入车量编号"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="431dp"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="不良代码"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/green" />

                    <EditText
                        android:id="@+id/Edit_ladecarErrorCode"
                        android:layout_width="251dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:autoText="false"
                        android:clickable="false"
                        android:contentDescription="@color/green"
                        android:editable="false"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint=" "
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="144dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/lab_DIPStartDip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="已装车数量"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/green" />

                    <EditText
                        android:id="@+id/Edit_ladequantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@color/green"
                        android:editable="false"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:text="0" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/Text_LadePCBSN"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="批号"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green" />

            <EditText
                android:id="@+id/Edit_LadePCBSN"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:autoText="false"
                android:contentDescription="@color/green"
                android:ems="10"
                android:hint="请扫描PCB批号"
                android:singleLine="true" />
            <LinearLayout
                android:layout_width="431dp"
                android:layout_height="wrap_content" 
                android:id="@+id/layout_ziban">

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                     <TextView
                android:id="@+id/Text_zibanSN"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="副板批号"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/Edit_zibanSN"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:autoText="false"
                android:contentDescription="@color/green"
                android:ems="10"
                android:hint="请扫描需要关联的副板批号"
                android:singleLine="true" />
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="144dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="已扫描副板数"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/red" />

                    <EditText
                        android:id="@+id/Edit_zibanSNnum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@color/green"
                        android:editable="false"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:text="0" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>
            </LinearLayout>
            
            
            <Button
                android:id="@+id/button_SMTCloseCar"
                android:layout_width="390dp"
                android:layout_height="95dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.01"
                android:text="关闭装车"
                android:textColor="@color/magenta"
                android:textColorHint="@color/magenta"
                android:visibility="gone"
                android:textSize="30px" />
            
            <Button
                android:id="@+id/button_SMTLadeCar"
                android:layout_width="390dp"
                android:layout_height="95dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.01"
                android:text="装车结果"
                android:textColor="@color/magenta"
                android:textColorHint="@color/magenta"
                android:textSize="30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/check_SMTLadeshowAllInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="显示所有信息" />

            <EditText
                android:id="@+id/Edit_LadeMESInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:gravity="top"
                android:inputType="text|textMultiLine" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>