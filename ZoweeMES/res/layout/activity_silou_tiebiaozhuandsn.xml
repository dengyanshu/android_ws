<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightskyblue"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".activity.CheckMoNamesActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
  
        <ImageView
            android:layout_width="200dp"
            android:layout_height="70dp"
            
           
            android:src="@drawable/login_logo" />
<!-- 贴标转（光模块）-转DSN-无贴标转（光模块）-转DSN-无 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_vertical|center_horizontal"
            android:text="贴标（光模块）转DSN-无 "
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textSize="60sp"
            android:textStyle="normal|bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="465dp"
            android:layout_height="537dp"
            android:orientation="vertical"
            android:padding="0dp" >
           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                
                >

                <TextView
                    android:id="@+id/tiebiaozhuandsn_motextview"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="工单:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/tiebiaozhuandsn_moedit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="输入批次号获取工单名称"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" ></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="产品描述:"
                    android:textColor="@color/red" 
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"/>

                <EditText
                    android:id="@+id/tiebiaozhuandsn_modecripedit"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:enabled="false"
                    android:focusable="false"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                   <TextView
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:text="料号:"
                       android:textColor="@color/red" />

                <EditText
                    android:id="@+id/tiebiaozhuandsn_moproductedit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:focusable="false"
                    android:textStyle="bold" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <TextView
                   
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="单板SN"
                    android:textColor="@color/red" 
                    android:layout_marginRight="5dp"/>

                <EditText
                    android:id="@+id/tiebiaozhuandsn_danbansnedit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:selectAllOnFocus="true"
                    android:singleLine="true" />

            </LinearLayout>

           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="客户机型"
                    android:textColor="@color/red" 
                    android:layout_marginRight="5dp"/>

                <EditText
                    android:id="@+id/tiebiaozhuandsn_kehujixingedit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:selectAllOnFocus="true"
                    android:textStyle="bold" />
            </LinearLayout>  
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                  
                  <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="MAC"
                    android:textColor="@color/red" 
                    android:layout_marginRight="5dp"/>

                <EditText
                    android:id="@+id/tiebiaozhuandsn_macedit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                
            </LinearLayout>
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="DSN"
                    android:textColor="@color/red" 
                    android:layout_marginRight="5dp"/>

                <EditText
                    android:id="@+id/tiebiaozhuandsn_dsnedit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                </LinearLayout>
                 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="客户SN"
                    android:textColor="@color/red" 
                    android:layout_marginRight="5dp"/>

                <EditText
                    android:id="@+id/tiebiaozhuandsn_kehusnedit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                </LinearLayout>
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" >
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/tiebiaozhuandsn_okbutton"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="贴标转DSN(光模块无LMS)  PLDNL"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/green" >

                </Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_marginLeft="20dp">

            <EditText
                android:id="@+id/tiebiaozhuandsn_editscan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:enabled="false"
                android:gravity="top"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>