<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightskyblue"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".activity.CheckMoNamesActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/login_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_vertical|center_horizontal"
            android:text="天津紫米维修出库"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textSize="40sp"
            android:textStyle="normal|bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="585dp"
            android:layout_height="545dp"
            android:orientation="vertical"
            android:padding="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginTop="50dp"
                android:background="@color/antiquewhite" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="工单"
                    android:textColor="@color/red" />
                 <EditText
                    android:id="@+id/tjzimi_repairout_mo"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:hint="输入工单名在MES校验"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                
                android:background="@color/antiquewhite" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="线体选择:"
                    android:textColor="@color/red" 
                    android:id="@+id/tjzimi_repairout_linebutton"/>

                <EditText
                    android:id="@+id/tjzimi_repairout_line"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:hint="点击按钮选择线体"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" >

              </EditText>

            </LinearLayout>
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blanchedalmond" 
                >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="条码类型:"
                    android:textColor="@color/red" />

                 <RadioGroup
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="horizontal" 
                     android:id="@+id/tjzimi_repairout_radiogroup">

                     <RadioButton
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:layout_weight="0.21"
                         android:text="产品出库" 
                            android:textColor="@color/red"
                         android:id="@+id/tjzimi_repairout_radio1">
                      
                     </RadioButton>

                     <RadioButton
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:layout_weight="0.16"
                         android:text="电源出库" 
                         android:textColor="@color/red"
                         android:id="@+id/tjzimi_repairout_radio2">

                     </RadioButton>
                 </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/blanchedalmond" 
                >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="条码SN:"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/tjzimi_repairout_sn"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_marginTop="5dp"
                    android:hint="扫描SN"
                    android:singleLine="true" />

            </LinearLayout>
               <Button
                   android:id="@+id/tjzimi_repairout_selectbutton"
                   android:layout_width="match_parent"
                   android:layout_height="75dp"
                   android:layout_marginRight="0dp"
                   android:text="查询"
                   android:textColor="@color/red" 
                   />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@color/antiquewhite" >

                 <TextView
                     android:layout_width="50dp"
                     android:layout_height="60dp"
                     android:gravity="right|center_horizontal"
                     android:text="线体"
                     android:textColor="@color/red"
                     android:textSize="18px"
                     android:textStyle="bold" />

                 <EditText
                     android:id="@+id/tjzimi_repairout_selectedit1"
                     android:layout_width="125dp"
                     android:layout_height="60dp"
                     android:layout_weight="0.70"
                     android:ellipsize="end"
                     android:singleLine="true" />

                 <Spinner
                     android:id="@+id/tjzimi_repairout_spinner"
                     android:layout_width="200dp"
                     android:layout_height="60dp" />

                 <TextView
                     android:layout_width="50dp"
                     android:layout_height="60dp"
                     android:gravity="center_horizontal"
                     android:text="数量"
                     android:textColor="@color/red"
                     android:textSize="18px" />

                 <EditText
                     android:id="@+id/tjzimi_repairout_selectedit2"
                     android:layout_width="60dp"
                     android:layout_height="60dp"
                     android:singleLine="true" >
                 </EditText>
             </LinearLayout>
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" 
                android:orientation="horizontal">
                
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_marginLeft="20dp">

            <EditText
                android:id="@+id/tjzimi_repairout_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1.80"
                android:ems="10"
                android:enabled="false"
                android:gravity="top"
                android:textSize="15sp" >
            </EditText>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>