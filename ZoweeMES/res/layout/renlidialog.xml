<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="650dp"
    android:layout_height="250dp"
    android:orientation="vertical" 
    >

    <TextView 
        android:id="@+id/activity_renlidialog_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="线体人力投入"
        android:gravity="center"
        android:textSize="45sp"
        android:textColor="@color/blue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/corners_bg_blue"
       />
    <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/corners_bg_blue"
        >   
            <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:text="标准人力"
	        android:textColor="@color/blue"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:gravity="center"
	        android:textSize="35sp"
	       />
              
            <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal"
	        >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
	        android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="直接人力投入" />

            <EditText
                android:id="@+id/activity_renlidialog_stand_zhijiejie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:focusable="false"
                android:textSize="25sp"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:ems="10" >

            </EditText>
           
         </LinearLayout>
         
            <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal"
	        >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
	        android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="间接人力投入" />

            <EditText
                android:id="@+id/activity_renlidialog_stand_jianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                 android:enabled="false"
                android:focusable="false"
                android:textSize="25sp"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:ems="10" >

            </EditText>
           
         </LinearLayout>
         
            
        
    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_bg_blue"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="实际人力"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blue"
                android:textSize="35sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直接人力投入"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue" />

                <EditText
                    android:id="@+id/activity_renlidialog_fact_zhijiejie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:textSize="25sp"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/black"
                android:textStyle="bold"
                    android:focusable="false" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="间接人力投入"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/blue" />

                <EditText
                    android:id="@+id/activity_renlidialog_fact_jianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="25sp"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/black"
                android:textStyle="bold"
                    android:enabled="false"
                    android:focusable="false" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_margin="5dp"
         android:background="@drawable/corners_bg_blue"
        >   
            <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:text="差异人力"
	        android:gravity="center"
	        android:textColor="@color/blue"
	        android:textSize="35sp"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	       />
              
            <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal"
	        >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
	        android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="直接人力差异" />

            <EditText
                android:id="@+id/activity_renlidialog_chayi_zhijie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                 android:enabled="false"
                android:focusable="false"
                android:textSize="25sp"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:ems="10" >

            </EditText>
           
         </LinearLayout>
         
            <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal"
	        >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
	        android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="间接人力差异" />

            <EditText
                android:id="@+id/activity_renlidialog_chayi_jianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                 android:enabled="false"
                 android:textSize="25sp"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:focusable="false"
                android:ems="10" >

            </EditText>
           
         </LinearLayout>
         
            
        
    </LinearLayout>

    
    
  
     </LinearLayout>
    
    
    
</LinearLayout>
