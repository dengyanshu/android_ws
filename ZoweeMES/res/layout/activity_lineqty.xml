<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightskyblue"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".activity.CheckMoNamesActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/login_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_vertical|center_horizontal"
            android:text="天津紫米线体投入数量查询"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textSize="40sp"
            android:textStyle="normal|bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="465dp"
            android:layout_height="545dp"
            android:orientation="vertical"
            android:padding="0dp" >
           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                
                android:background="@color/antiquewhite" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="线体选择:"
                    android:textColor="@color/red" 
                    android:id="@+id/line_linebutton"/>

                <EditText
                    android:id="@+id/line_lineedittext"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    android:hint="手动输入或者按钮从系统选择">
              </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@color/blanchedalmond" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="投入数量:"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/line_inputnumedittext"
                    android:layout_width="292dp"
                    android:layout_height="78dp"
                    android:layout_marginTop="5dp"
                    android:hint="输入数量"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/line_okbutton"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="确认" 
                    android:textColor="@color/red" />

            </LinearLayout>

           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" 
                android:layout_marginTop="15dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginRight="5dp"
                    android:text="查询"
                    android:textColor="@color/red" 
                    android:id="@+id/line_selectbutton"/>

                

            </LinearLayout>  
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="right|center_horizontal"
                    android:text="线体："
                    android:textColor="@color/red"
                    android:textSize="20px"
                    />

                <EditText
                    android:id="@+id/line_selectedittext1"
                    android:layout_width="0dp"
                    android:layout_height="78dp"
                    android:singleLine="true" 
                     android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    android:text="已投入数量:"
                    android:textColor="@color/red"
                    android:textSize="20px"
                     android:layout_weight="1"/>

                <EditText
                    android:id="@+id/line_selectedittext2"
                    android:layout_width="0dp"
                    android:layout_height="78dp"
                    android:singleLine="true" 
                     android:layout_weight="1"/>
                 
             </LinearLayout>
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" 
                android:orientation="horizontal">
                
            </LinearLayout>
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" >

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" 
                android:layout_marginTop="5dp">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_marginLeft="20dp">

            <EditText
                android:id="@+id/line_scanedittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1.80"
                android:ems="10"
                android:enabled="false"
                android:gravity="top"
                android:textSize="15sp" >

                <requestFocus />
            </EditText>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>