<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightskyblue"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".activity.CheckMoNamesActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/login_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_vertical|center_horizontal"
            android:text="彩盒产品通用核对"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textSize="40sp"
            android:textStyle="normal|bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="765dp"
            android:layout_height="580dp"
            android:orientation="vertical"
            android:padding="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/antiquewhite" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:text="工单:"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/smtfvmi_moname"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    android:hint="扫描条码获取工单">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:text="产品描述:"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/smtfvmi_moproduct"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.60"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="产品\n名称:"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/smtfvmi_moproductddescre"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
          
               
            <ScrollView 
                    android:layout_width="match_parent"
                   android:layout_height="360dp"
                   android:scrollbars="vertical"
                   android:background="@color/blanchedalmond" 
                 >
               <LinearLayout 
                      android:layout_width="match_parent"
                     android:layout_height="380dp"
                      android:orientation="vertical"
                 >
                 <!-- 开始。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。嵌套-->
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blanchedalmond" 
                android:orientation="horizontal">

                  <TextView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="字段1:"
                    android:textColor="@color/red" />

                <Spinner
                    android:id="@+id/checkpacking_spinner1"
                    android:layout_width="130dp"
                    android:layout_height="70dp" 
                    android:entries="@array/checkpacking_arr"
                    />

                <EditText
                    android:id="@+id/smtfvmi_sn"
                    android:layout_width="292dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.74"
                    android:ems="10"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="核对结果" 
                    android:textColor="@color/red"/>
                 <EditText
                    android:id="@+id/smtfvmi_sn"
                    android:layout_width="292dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.74"
                    android:ems="10"
                    android:hint="sucess或fail"
                    android:singleLine="true" />

            </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blanchedalmond" 
                android:orientation="horizontal">

                  <TextView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="字段2:"
                    android:textColor="@color/red" />

                <Spinner
                    android:id="@+id/checkpacking_spinner1"
                    android:layout_width="130dp"
                    android:layout_height="70dp" 
                    android:entries="@array/checkpacking_arr"
                    />

                <EditText
                    android:id="@+id/smtfvmi_sn"
                    android:layout_width="292dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.74"
                    android:ems="10"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="核对结果" 
                    android:textColor="@color/red"/>
                 <EditText
                    android:id="@+id/smtfvmi_sn"
                    android:layout_width="292dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.74"
                    android:ems="10"
                    android:hint="sucess或fail"
                    android:singleLine="true" />

            </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blanchedalmond" 
                android:orientation="horizontal">

                  <TextView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="字段3:"
                    android:textColor="@color/red" />

                <Spinner
                    android:id="@+id/checkpacking_spinner1"
                    android:layout_height="70dp" 
                    android:layout_width="130dp"
                    android:entries="@array/checkpacking_arr"
                    />

                <EditText
                    android:id="@+id/smtfvmi_sn"
                    android:layout_width="292dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.74"
                    android:ems="10"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="核对结果" 
                    android:textColor="@color/red"/>
                 <EditText
                    android:id="@+id/smtfvmi_sn"
                    android:layout_width="292dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.74"
                    android:ems="10"
                    android:hint="sucess或fail"
                    android:singleLine="true" />

           
            </LinearLayout>
             
             
            
          <!-- 结束。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。嵌套-->
                      
                      
                      
               </LinearLayout>
              
              
                   
                   
             </ScrollView>
               
               
      
             
          

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/antiquewhite"
                >

                <Button
                    android:id="@+id/smtfvmi_button"
                    android:layout_width="wrap_content"
                    android:layout_height="71dp"
                    android:focusable="false"
                    android:text="清空所有"
                     android:textColor="@color/red"
                    android:layout_alignParentRight="true" />
                   
              <Button
                  android:id="@+id/smtfvmi_button2"
                  android:layout_width="wrap_content"
                  android:layout_height="71dp"
                  android:layout_toLeftOf="@+id/smtfvmi_button"
                  android:focusable="false"
                  android:gravity="center_vertical|center_horizontal"
                  android:layout_marginRight="15dp"
                  android:text="彩盒核对配置"
                  android:textColor="@color/red" />
               
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_marginLeft="20dp">

            <EditText
                android:id="@+id/smtfvmi_sacnedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1.80"
                android:ems="10"
                android:enabled="false"
                android:gravity="top"
                android:textSize="15sp" >

              
            </EditText>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>