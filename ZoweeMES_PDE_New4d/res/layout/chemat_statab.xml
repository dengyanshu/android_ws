<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/thin_back"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/style_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meter_statab"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/edt_meter_lineStaNo"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="0.42"
            android:singleLine="true"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edt_slotCount"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.10"
            android:enabled="false"
            android:singleLine="true"
            android:textSize="12dp" />

    </LinearLayout>

    <include
        android:id="@+id/btnGroups"
        layout="@layout/common_btngroup_1" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableLayout
                android:id="@+id/TableLayout_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </TableLayout>

        </HorizontalScrollView>

    </ScrollView>

</LinearLayout>