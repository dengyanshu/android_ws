<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    android:orientation="vertical"
    android:showDividers="middle" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@drawable/corners_bg"
        android:orientation="vertical" >
           <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" >

            <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="PO"
            android:textColor="@color/red"
            android:textSize="14dp" />

            <EditText
            android:id="@+id/ckchuhuo_poedit"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:textSize="12dp" 
            android:hint="输入栈板或箱号获取PO"/>
            
             <Button 
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="≡清空≡"
                 android:textColor="@color/red"
                 android:textSize="12sp"
                 android:onClick="click"
                
                />
         </LinearLayout>
         
           <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" >

            <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="PO数量"
            android:textSize="14dp" 
            android:textColor="@color/red"
            android:layout_marginLeft="15dp"/>

            <EditText
            android:id="@+id/ckchuhuo_ponumedit"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:textSize="10dp" 
            android:enabled="false"
            android:focusable="false"
            />
            
             <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="栈板数量"
            android:textSize="14dp" 
            android:textColor="@color/red"
            android:layout_marginLeft="15dp"/>

            <EditText
            android:id="@+id/ckchuhuo_zhanbannumedit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:singleLine="true"
            android:textSize="10dp" 
            android:enabled="false"
            android:focusable="false"
            />
             
         </LinearLayout>
       
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:background="@drawable/corners_bg"
        android:orientation="vertical" >
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" >

            <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="PO："
            android:textSize="14dp" 
            android:textColor="@color/red"
            android:layout_marginLeft="15dp"/>

            <EditText
                 android:id="@+id/ckchuhuo_pocheckedit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:textSize="10dp" />
             
         </LinearLayout>
         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" >

            <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="栈板："
            android:textSize="14dp" 
            android:textColor="@color/red"
            android:layout_marginLeft="15dp"/>

            <EditText
                 android:id="@+id/ckchuhuo_zhanbanedit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:textSize="10dp" />
             
         </LinearLayout>
         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" >

            <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="箱号1："
            android:textSize="14dp" 
            android:textColor="@color/red"
            android:layout_marginLeft="15dp"/>

            <EditText
                 android:id="@+id/ckchuhuo_box1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:textSize="10dp" />
             
         </LinearLayout>
         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" >

            <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
           android:text="箱号2："
            android:textSize="14dp" 
            android:textColor="@color/red"
            android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/ckchuhuo_box2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:textSize="10dp" />
             
         </LinearLayout>
         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" >

            <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="箱号3："
            android:textSize="14dp" 
            android:textColor="@color/red"
            android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/ckchuhuo_box3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:textSize="10dp" />
             
         </LinearLayout>
         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" >

            <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="箱号4："
            android:textSize="14dp" 
            android:textColor="@color/red"
            android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/ckchuhuo_box4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:textSize="10dp" />
             
         </LinearLayout>

        
    </LinearLayout>
     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal" >
         
      </LinearLayout>
     
    
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/corners_bg"
        android:orientation="vertical" >
           <EditText
                android:id="@+id/smtipqc_editscan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:gravity="top"
                android:textSize="15sp" 
                android:focusable="false"/>
        
    </LinearLayout>
    

    

</LinearLayout>